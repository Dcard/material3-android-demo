<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clipToPadding="false"
	android:padding="16dp"
	app:dividerDrawable="@drawable/space_8dp"
	app:flexWrap="wrap"
	app:showDivider="middle">

	<TextView
		style="@style/WidgetsSectionItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:text="@string/widgets.fab.title"
		app:layout_flexBasisPercent="100%" />

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		style="?attr/floatingActionButtonSmallStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/widgets.fab_small.description"
		app:srcCompat="@drawable/ic_widgets_filled_24dp" />

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		style="?attr/floatingActionButtonStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/widgets.fab_medium.description"
		app:srcCompat="@drawable/ic_widgets_filled_24dp" />

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		style="?attr/floatingActionButtonLargeStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/widgets.fab_large.description"
		app:srcCompat="@drawable/ic_widgets_filled_24dp" />

	<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/widgets.fab_extended.description"
		app:icon="@drawable/ic_widgets_filled_24dp" />
</com.google.android.flexbox.FlexboxLayout>