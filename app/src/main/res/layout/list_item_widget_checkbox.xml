<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp"
	app:dividerDrawable="@drawable/space_8dp"
	app:flexWrap="wrap"
	app:showDivider="middle">

	<TextView
		style="@style/WidgetsSectionItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/widgets.checkbox.title"
		app:layout_flexBasisPercent="100%" />

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/widgets.checkbox_option.description" />

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:enabled="false"
		android:text="@string/widgets.checkbox_option_disabled.description" />
</com.google.android.flexbox.FlexboxLayout>