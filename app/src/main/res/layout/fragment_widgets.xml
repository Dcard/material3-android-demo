<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.google.android.material.appbar.MaterialToolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?actionBarSize"
			android:elevation="0dp"
			app:title="@string/widgets.main.title" />
	</com.google.android.material.appbar.AppBarLayout>

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">

		<com.google.android.flexbox.FlexboxLayout
			android:id="@+id/contentLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clipToPadding="false"
			android:orientation="vertical"
			android:paddingHorizontal="16dp"
			android:paddingBottom="16dp"
			app:dividerDrawable="@drawable/space_8dp"
			app:flexWrap="wrap"
			app:showDivider="middle">

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button.title"
				app:layout_flexBasisPercent="100%" />

			<Button
				style="@style/Widget.Material3.Button.ElevatedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_elevated.description" />

			<Button
				style="@style/Widget.Material3.Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_filled.description" />

			<Button
				style="@style/Widget.Material3.Button.TonalButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_tonal.description" />

			<Button
				style="@style/Widget.Material3.Button.OutlinedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_outlined.description" />

			<Button
				style="@style/Widget.Material3.Button.TextButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_text.description" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.fab.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.floatingactionbutton.FloatingActionButton
				style="?attr/floatingActionButtonSmallStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@string/widgets.fab_small.description"
				app:srcCompat="@drawable/ic_widgets_filled_24dp" />

			<com.google.android.material.floatingactionbutton.FloatingActionButton
				style="?attr/floatingActionButtonStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@string/widgets.fab_medium.description"
				app:srcCompat="@drawable/ic_widgets_filled_24dp" />

			<com.google.android.material.floatingactionbutton.FloatingActionButton
				style="?attr/floatingActionButtonLargeStyle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:contentDescription="@string/widgets.fab_large.description"
				app:srcCompat="@drawable/ic_widgets_filled_24dp" />

			<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.fab_extended.description"
				app:icon="@drawable/ic_widgets_filled_24dp" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.button_segmented.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.button.MaterialButtonToggleGroup
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:singleSelection="true">

				<Button
					style="?materialButtonOutlinedStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="true"
					android:text="@string/widgets.button_segmented_1.option" />

				<Button
					style="?materialButtonOutlinedStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.button_segmented_2.option" />

				<Button
					style="?materialButtonOutlinedStyle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.button_segmented_3.option" />
			</com.google.android.material.button.MaterialButtonToggleGroup>

			<com.google.android.material.button.MaterialButtonToggleGroup
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:singleSelection="true">

				<Button
					style="@style/Widget.Material3.Button.OutlinedButton.Icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.button_segmented_1.option"
					app:icon="@drawable/ic_widgets_filled_24dp" />

				<Button
					style="@style/Widget.Material3.Button.OutlinedButton.Icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.button_segmented_2.option"
					app:icon="@drawable/ic_widgets_filled_24dp" />
			</com.google.android.material.button.MaterialButtonToggleGroup>

			<com.google.android.material.button.MaterialButtonToggleGroup
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:singleSelection="true">

				<Button
					style="@style/Widget.App.Button.OutlinedButton.IconOnly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:icon="@drawable/ic_format_align_left_24dp" />

				<Button
					style="@style/Widget.App.Button.OutlinedButton.IconOnly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:icon="@drawable/ic_format_align_center_24dp" />

				<Button
					style="@style/Widget.App.Button.OutlinedButton.IconOnly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:icon="@drawable/ic_format_align_right_24dp" />

				<Button
					style="@style/Widget.App.Button.OutlinedButton.IconOnly"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:icon="@drawable/ic_format_align_justify_24dp" />
			</com.google.android.material.button.MaterialButtonToggleGroup>

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.chip.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.chip.ChipGroup
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:chipSpacingVertical="0dp">

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Assist"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_assist.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Assist.Elevated"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_assist.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Filter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_filter.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Filter.Elevated"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_filter.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Input"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_input.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Input.Elevated"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_input.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Suggestion"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_suggestion.description" />

				<com.google.android.material.chip.Chip
					style="@style/Widget.Material3.Chip.Suggestion.Elevated"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.chip_suggestion.description" />
			</com.google.android.material.chip.ChipGroup>

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.progress.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.progressindicator.CircularProgressIndicator
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:indeterminate="true" />

			<com.google.android.material.progressindicator.LinearProgressIndicator
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:indeterminate="true" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.slider.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.slider.Slider
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:valueFrom="0.0"
				android:valueTo="100.0" />

			<com.google.android.material.slider.Slider
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stepSize="10.0"
				android:valueFrom="0.0"
				android:valueTo="100.0" />

			<com.google.android.material.slider.RangeSlider
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:valueFrom="0.0"
				android:valueTo="100.0"
				app:values="@array/initial_slider_values" />

			<com.google.android.material.slider.RangeSlider
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stepSize="10.0"
				android:valueFrom="0.0"
				android:valueTo="100.0"
				app:values="@array/initial_slider_values" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.checkbox.title"
				app:layout_flexBasisPercent="100%" />

			<CheckBox
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.checkbox_option.description" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.radio.title"
				app:layout_flexBasisPercent="100%" />

			<RadioGroup
				android:id="@+id/radioGroup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.radio_1.option" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.radio_2.option" />
			</RadioGroup>

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.switch.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.materialswitch.MaterialSwitch
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="@string/widgets.switch.option" />

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.tab.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.tabs.TabLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<com.google.android.material.tabs.TabItem
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.tab_1.option" />

				<com.google.android.material.tabs.TabItem
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.tab_2.option" />

				<com.google.android.material.tabs.TabItem
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.tab_3.option" />
			</com.google.android.material.tabs.TabLayout>

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.text_field.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.textfield.TextInputLayout
				style="?textInputFilledStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/widgets.text_field_filled.hint"
				app:helperText="@string/widgets.text_field_supporting.description">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/filledErrorTextInputLayout"
				style="?textInputFilledStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/widgets.text_field_filled_error.hint"
				app:errorEnabled="true">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				style="?textInputOutlinedStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/widgets.text_field_outlined.hint"
				app:helperText="@string/widgets.text_field_supporting.description">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/outlinedErrorTextInputLayout"
				style="?textInputOutlinedStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/widgets.text_field_outlined_error.hint"
				app:errorEnabled="true">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</com.google.android.material.textfield.TextInputLayout>

			<com.google.android.material.textfield.TextInputLayout
				style="?textInputOutlinedDenseStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/widgets.text_field_outlined_dense.hint"
				app:helperText="@string/widgets.text_field_supporting.description">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />
			</com.google.android.material.textfield.TextInputLayout>

			<TextView
				style="@style/WidgetsSectionItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/widgets.card.title"
				app:layout_flexBasisPercent="100%" />

			<com.google.android.material.card.MaterialCardView
				style="@style/Widget.Material3.CardView.Elevated"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				app:layout_flexBasisPercent="100%">

				<TextView
					style="@style/WidgetsCardItemText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/widgets.card_elevated.description"
					android:textAppearance="?textAppearanceLabelLarge" />
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				style="@style/Widget.Material3.CardView.Filled"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				app:layout_flexBasisPercent="100%">

				<TextView
					style="@style/WidgetsCardItemText"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/widgets.card_filled.description"
					android:textAppearance="?textAppearanceLabelLarge" />
			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				style="@style/Widget.Material3.CardView.Outlined"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true"
				android:focusable="true"
				app:layout_flexBasisPercent="100%">

				<TextView
					style="@style/WidgetsCardItemText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/widgets.card_outlined.description"
					android:textAppearance="?textAppearanceLabelLarge" />
			</com.google.android.material.card.MaterialCardView>
		</com.google.android.flexbox.FlexboxLayout>
	</androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>