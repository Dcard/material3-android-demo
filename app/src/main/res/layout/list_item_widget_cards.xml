<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clipToPadding="false"
	android:divider="@drawable/space_8dp"
	android:orientation="vertical"
	android:padding="16dp"
	android:showDividers="middle">

	<TextView
		style="@style/WidgetsSectionItem"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:text="@string/widgets.card.title" />

	<com.google.android.material.card.MaterialCardView
		style="@style/Widget.Material3.CardView.Elevated"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true">

		<TextView
			style="@style/WidgetsCardItemText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/widgets.card_elevated.description"
			android:textAppearance="?textAppearanceLabelLarge" />
	</com.google.android.material.card.MaterialCardView>

	<com.google.android.material.card.MaterialCardView
		style="@style/Widget.Material3.CardView.Filled"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true">

		<TextView
			style="@style/WidgetsCardItemText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/widgets.card_filled.description"
			android:textAppearance="?textAppearanceLabelLarge" />
	</com.google.android.material.card.MaterialCardView>

	<com.google.android.material.card.MaterialCardView
		style="@style/Widget.Material3.CardView.Outlined"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true"
		app:layout_flexBasisPercent="100%">

		<TextView
			style="@style/WidgetsCardItemText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/widgets.card_outlined.description"
			android:textAppearance="?textAppearanceLabelLarge" />
	</com.google.android.material.card.MaterialCardView>
</LinearLayout>