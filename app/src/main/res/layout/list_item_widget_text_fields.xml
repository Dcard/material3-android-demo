<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:divider="@drawable/space_8dp"
	android:orientation="vertical"
	android:padding="16dp"
	android:showDividers="middle">

	<TextView
		style="@style/WidgetsSectionItem"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="15dp"
		android:text="@string/widgets.text_field.title"
		app:layout_flexBasisPercent="100%" />

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputFilledStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_filled.hint"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/filledErrorTextInputLayout"
		style="?textInputFilledStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_filled_error.hint"
		app:errorEnabled="true">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputFilledStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:enabled="false"
		android:hint="@string/widgets.text_field_filled_disabled.hint"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputOutlinedStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_outlined.hint"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/outlinedErrorTextInputLayout"
		style="?textInputOutlinedStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_outlined_error.hint"
		app:errorEnabled="true">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputOutlinedStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:enabled="false"
		android:hint="@string/widgets.text_field_outlined_disabled.hint"
		app:errorEnabled="true"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/outlinedErrorDenseTextInputLayout"
		style="?textInputOutlinedDenseStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_outlined_dense.hint"
		app:errorEnabled="true"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputOutlinedDenseStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/widgets.text_field_outlined_dense.hint"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		style="?textInputOutlinedDenseStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:enabled="false"
		android:hint="@string/widgets.text_field_outlined_dense_disabled.hint"
		app:helperText="@string/widgets.text_field_supporting.description">

		<com.google.android.material.textfield.TextInputEditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</com.google.android.material.textfield.TextInputLayout>
</LinearLayout>